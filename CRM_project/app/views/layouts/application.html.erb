<!DOCTYPE html>
<html>
<head>
  <title>CRMProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <a class="navbar-brand"  <%= link_to "Wonsik Jeong", root_path %> </a>
    </div>
    <% if current_user %>
      <%= link_to raw('<i class="glyphicon glyphicon-log-out"></i> Signout'), destroy_user_session_path, :method => :delete, class: "btn btn-default btn-lg"  %>
    <% else %>
        <%= link_to raw('<i class="glyphicon glyphicon-thumbs-up"></i> Signup'), new_user_registration_path, class: "btn btn-default btn-lg" %>

        <%= link_to raw('<i class="glyphicon glyphicon-log-in"></i> Login'), new_user_session_path, class: "btn btn-default btn-lg" %>

    <% end %>
    <%= link_to "New Job", new_home_path %>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

  </body>
  </html>
